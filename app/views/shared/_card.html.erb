<div id="card">
  <%# This div would be the image %>
  <div class="bg-gray w-100" style="width: 150px; height: 150px; background-color: white; border-radius: 12px;"></div>

  <div id="content" class="mt-4" style="display: flex; flex-direction: column; align-items: flex-start;">
    <%# Nombre del housing %>
    <%= link_to housing_path(housing), class: "font-weight-bold" do %> <%= housing.name %> <% end %>

    <%# Nombre de la ciudad %>
    <p id="city" style="margin-bottom: 1px; color: gray;"><%= housing.city %></p>
    <div>
        <i class="fas fa-star star-yellow"></i>
        <small><em class="text-muted"><%= housing.averagee_rating %></em></small>
    </div>
    <%# Fechas disponibles %>
    <p id="availability" style="margin-bottom: 8px; color: gray;">Oct 23 - 28</p>

    <%# Precio por noche %>
    <div id="pricepernight" class='d-flex align-items-end'>
      <h5 style="margin-bottom: 4px;">$<%= housing.price %></h5>
      <p style="margin-bottom: 4px;">/night</p>
    </div>
  </div>
</div>
