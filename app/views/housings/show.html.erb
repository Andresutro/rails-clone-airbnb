<p style="color: green"><%= notice %></p>

<%= render @housing %>

<div class="row">
  <div class="col-12 col-sm-6">
    <div class="card border-0 shadow">
      <div class="card-body">
        <h5 class="card-title mb-4 text-center">Add your book</h5>
        <%= simple_form_for [@housing, @book], data: { controller: 'flatpickr' } do |f| %>
          <div class="row mb-3">
            <div class="col-md-6">
              <%= f.input :start_date, as: :string, input_html: { class: 'form-control flatpickr-input', data: { flatpickr_target: 'startTime' } }, label: false, placeholder: 'Start date' %>
            </div>
            <div class="col-md-6">
              <%= f.input :end_date, as: :string, input_html: { class: 'form-control flatpickr-input', data: { flatpickr_target: 'endTime' } }, label: false, placeholder: 'End date' %>
            </div>
          </div>
          <div class="text-center">
            <%= f.button :submit, 'Schedule your appointment', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 col-sm-6">
    <h3>Reviews</h3>
    <% if @housing.reviews.empty? %>
      <small><em class="text-muted">Be the first one to review this list</em></small>
    <% end %>
    <% @housing.reviews.each do |review| %>
      <div>
        <% review.rating.times do %>
          <i class="fas fa-star star-yellow"></i>
        <% end %>
        <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
        <p class="mb-0"><%= review.content %></p>
      </div>
      <hr>
    <% end %>
  </div>
  <div class="col-12 col-sm-6">
    <div class="bg-white rounded p-3">
      <h5>Add your review</h5>
      <%= simple_form_for [@housing, @review] do |f| %>
        <%= f.input :content, placeholder: "Add your review here..." %>
        <%= f.input :rating, as: :select, collection: (1..5).to_a, required: true, prompt: "What's your rating", input_html: { data: { controller: "star-rating" } } %>
        <%= f.submit class:"btn btn-flat" %>
      <% end %>
    </div>
  </div>
</div>


<div>
  <%= link_to "Edit this housing", edit_housing_path(@housing) %> |
  <%= link_to "Back to housings", housings_path %>
  <%= button_to "Destroy this housing", @housing, method: :delete %>
</div>
