<div class="justify-content-center">
  <style>
    .container {
      margin: 0 auto;
      max-width: 768px;
      padding: 0 16px;
    }

    .form-container {
      margin-top: 128px;
      margin-bottom: 128px;
    }

    @media (max-width: 768px) {
      .container {
        padding: 0;
      }

      .form-container {
        margin-top: 64px;
        margin-bottom: 64px;
      }
    }
  </style>

  <div class="form-container" style="margin: 128px 30%">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mt-5 mb-5 border-gray">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "Email" }, label: false %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "Password" }, label: false %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "Confirm your password" }, label: false %>
      </div>

      <div class="form-actions btn btn-primary mb-2" style='border-radius: 15px;'>
        <%= f.button :submit, "Sign up", style: "color: white;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
